<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  
  <!-- Servlets -->
  
   <!-- core -->
   <servlet>
    <servlet-name>rpcCoreServlet</servlet-name>
    <servlet-class>org.gonevertical.core.server.RpcCoreServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>rpcCoreServlet</servlet-name>
    <url-pattern>/democoreengine/rpccore</url-pattern>
  </servlet-mapping>
  
  <!-- parent -->
  <servlet>
    <servlet-name>rpcServlet</servlet-name>
    <servlet-class>com.gawkat.demo.server.RpcServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>rpcServlet</servlet-name>
    <url-pattern>/democoreengine/rpcService</url-pattern>
  </servlet-mapping>
  
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>DemoCoreEngine.html</welcome-file>
  </welcome-file-list>

</web-app>
