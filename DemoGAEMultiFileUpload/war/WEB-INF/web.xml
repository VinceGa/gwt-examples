<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  
  <!-- Servlets -->
  <servlet>
    <servlet-name>rpcServlet</servlet-name>
    <servlet-class>org.gonevertical.MultiFileUpload.server.RpcServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>rpcServlet</servlet-name>
    <url-pattern>/demogaemultifileupload/rpcService</url-pattern>
  </servlet-mapping>
  
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>DemoGAEMultiFileUpload.html</welcome-file>
  </welcome-file-list>
  
  
  <!-- Blob Servlets -->
  <servlet-mapping>
    <servlet-name>Serve</servlet-name>
    <url-pattern>/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Serve</servlet-name>
    <servlet-class>org.gonevertical.core.server.db.blobs.Servlet_Serve</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>Upload</servlet-name>
    <url-pattern>/upload</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Upload</servlet-name>
    <servlet-class>org.gonevertical.core.server.db.blobs.Servlet_Upload</servlet-class>
  </servlet>
    
  <servlet-mapping>
    <servlet-name>Blob</servlet-name>
    <url-pattern>/blob</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Blob</servlet-name>
    <servlet-class>org.gonevertical.core.server.db.blobs.Servlet_Blob</servlet-class>
  </servlet>
</web-app>
